@using FootballLeague.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="Twoje zespoły">
            <a class="nav-link text-light" asp-controller="Team" asp-action="GetAll">Twoje zespoły</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">
                Wyloguj się
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Zaloguj się</a>
        </li>
    }
</ul>
